{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "includePaths": [
      "**/clusters/**",
      "**/infrastructure/**",
      "**/apps/**"
    ],
    "managerFilePatterns": [
      "/(^|/)[^/]*\\.ya?ml$/"
    ],
    "packageRules": [
      {
        "description": "Automerge non-major updates",
        "matchUpdateTypes": [
          "minor",
          "patch"
        ],
        "automerge": true
      }
    ]
  }
}
